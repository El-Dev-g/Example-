rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
  
    // Helpers
    function isAppUser(userId) {
      return exists(/databases/$(database)/documents/users/$(userId));
    }

    function isAppAdmin(userId) {
        return get(/databases/$(database)/documents/users/$(userId)).data.isAdmin == true;
    }
    
    function isSignedIn() {
        return request.auth != null;
    }
    
    function isOwner(userId) {
        return request.auth.uid == userId;
    }

    // Admins have full read/write access to all user documents
    match /users/{userId} {
      allow read, write: if isSignedIn() && isAppAdmin(request.auth.uid);
      allow read: if isSignedIn() && isOwner(userId);
    }
    
    // Only Admins can read/write the global API settings
    match /settings/api {
      allow read, write: if isSignedIn() && isAppAdmin(request.auth.uid);
    }
    
  }
}
